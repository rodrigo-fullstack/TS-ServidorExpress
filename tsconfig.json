{
    "extends": "@tsconfig/node22/tsconfig.json",
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 22",
    "_version": "22.0.0",
    
      "compilerOptions": {
        "lib": ["es2023", "DOM"],
        "module": "node16",
        "target": "es2022",
    
        "outDir": "./out",
        "rootDir": "./src",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16"
    },


    //Gera erro quando não há itens internos
    "include": [
        "./src/**/*.ts"
    ]
}
